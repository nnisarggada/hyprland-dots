#!/bin/sh
# A dmenu wrapper script for system functions.
case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

case "$(printf "lock\nlogout\nsleep\nreboot\nshutdown" | ~/.local/bin/dmen -p "SYS: " --tb '#F75265')" in
	'lock')  playerctl pause & hyprlock -l --time-format "%I:%M %p" ;;
	'logout') loginctl terminate-session ${XDG_SESSION_ID-} ;;
	'sleep') playerctl pause & hyprlock -l dim -l --time-format "%I:%M %p" & $ctl suspend ;;
	'reboot') $ctl reboot ;;
	'shutdown') $ctl poweroff ;;
	*) exit 1 ;;
esac
